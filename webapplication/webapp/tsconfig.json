{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [ "./types", "./node_modules/@types"],
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}